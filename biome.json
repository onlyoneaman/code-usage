{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": { "noForEach": "off" }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": { "level": "on" }
      }
    }
  },
  "files": {
    "includes": ["**", "!node_modules", "!templates/dashboard.html", "!src/pricing/litellm-data.json", "!.npm-cache"]
  },
  "overrides": [
    {
      "includes": ["templates/src/**"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "noParameterAssign": "off",
            "useTemplate": "off",
            "noNonNullAssertion": "off"
          },
          "correctness": { "noInnerDeclarations": "off" },
          "suspicious": { "noDoubleEquals": "off" }
        }
      }
    }
  ]
}
